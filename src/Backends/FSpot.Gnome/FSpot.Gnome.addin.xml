<?xml version="1.0" encoding="utf-8"?>
<Addin 
    id="FSpot.Gnome"
    version="1.0"
    compatVersion="1.0"
    copyright="© 2015 Stephen Shaw. Licensed under the MIT X11 license."
    category="required:Backends"
    description="Backend providers for the GNOME platform. Includes GConf support and general GNOME integration."
    defaultEnabled="true">

  <Dependencies>
    <Addin id="FSpot.Core" version="1.0"/>
    <Addin id="FSpot.Services" version="1.0"/>
  </Dependencies>
  
  <Extension path="/FSpot/ServiceManager/Service">
    <Service class="FSpot.GnomeBackend.GnomeService"/>
  </Extension>

  <Extension path="/FSpot/Platform/ConfigurationClient">
    <ConfigurationClient class="FSpot.GnomeBackend.GConfConfigurationClient"/>
  </Extension>

  <Extension path="/FSpot/Platform/DiscDuplicator">
    <DiscDuplicator class="FSpot.GnomeBackend.DiscDuplicator"/>
  </Extension>

  <!--<Extension path="/FSpot/Platform/DefaultApplicationHelper">
    <Helper class="FSpot.GnomeBackend.DefaultApplicationHelper"/>
</Extension>-->
  
  <Extension path="/FSpot/PlatformServices/ScreensaverManager">
    <ScreensaverManager class="FSpot.GnomeBackend.GnomeScreensaverManager"/>
  </Extension>
</Addin>
